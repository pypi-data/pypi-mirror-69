{
    "name": "tool",
    "tool-version": "1",
    "description": "a tool",
    "command-line": "tool_cli [CONFIG_FILE]",
    "schema-version": "0.5",
    "inputs": [
    {
        "id": "value",
        "name": "value",
        "type": "String",
        "value-key": "[VALUE]",
        "value-choices": ["yes", "no"],
        "default-value": "no",
        "optional": true
    }
    ],
    "output-files": [
    {
        "id": "config_file",
        "name": "Configuration file",
        "value-key": "[CONFIG_FILE]",
        "path-template": "tmpConfig.toml",
        "file-template": [
            "hi__",
            "value = [VALUE]",
            "__bye"
            ]
        }
    ]
}