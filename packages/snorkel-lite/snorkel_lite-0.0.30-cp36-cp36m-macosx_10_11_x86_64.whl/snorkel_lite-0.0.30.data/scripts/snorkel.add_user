#!python
from __future__ import print_function
import os
import sys

import snorkel
from snorkel.web import app

snorkel.shared_mode()

def main():
    if len(sys.argv) <= 1:
      print("Usage: snorkel.add_user <username>")

    with app.app_context():
        snorkel.cli._add_user(sys.argv[1])

if __name__ == "__main__":
    main()

