{
    "title": "JSON schema for the dataset configurations.",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "dataset": {
                "type": "string",
                "enum": [
		    "ALLEN_AI_ARC",
		    "ALLEN_AI_DROP",
		    "ALLEN_AI_OBQA",
		    "COSMOS_QA",
		    "CSQA",
		    "HOTPOT_QA",
		    "RACE"
                ]
            },
            "config": {
                "type": "object",
                "properties": {
                    "requirements": {
                        "type": "array",
                        "items": {
			    "type": "object",
                            "properties": {
                                "URL": {"type": "string"},
                                "SHA256": {
				    "type": "string",
				    "pattern": "^[0123456789abcdef]{64}$"
				}
                            },
                            "required": ["URL", "SHA256"],
                            "additionalProperties": false
                        },
			"minItems": 1
                    },
		    "expectedFiles": {"type": "string"}
                },
                "required": ["requirements", "expectedFiles"],
                "additionalProperties": false
            }
        },
        "required": ["dataset", "config"],
        "additionalProperties": false
    }
}
