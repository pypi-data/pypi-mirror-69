#!/bin/bash

this_task=$(basename "$(pwd)")

cd ..

if [ -f contest.yaml ]
then
    cmsbooklet -t cms-contest -l italian --only "$this_task" "$@" contest.yaml
else
    YAML=$(mktemp "$PWD/contest.yaml.XXXXXXXX")
    echo "tasks:" >> "$YAML"
    echo " - $this_task" >> "$YAML"
    cmsbooklet -t cms-contest -l italian --only "$this_task" "$@" "$YAML"
    rm "$YAML"
fi
